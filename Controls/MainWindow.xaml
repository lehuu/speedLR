<Window x:Class="SpeedLR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpeedLR.Controls"
        xmlns:utils="clr-namespace:SpeedLR.Utils"
        xmlns:model="clr-namespace:SpeedLR.Model"
        Closing="MainWindow_Closing"
        mc:Ignorable="d"
        ShowActivated="False"
        Focusable="False"
		SizeToContent="Height"
        Height="Auto"
        Title="SpeedLr" Width="300"
		MinHeight="400"
		ResizeMode="NoResize"
		d:DataContext="{d:DesignInstance local:MainViewModel}">

	<Window.DataContext>
		<local:MainViewModel />
	</Window.DataContext>

	<Window.Resources>
		<utils:ObjectToVisibilityConverter x:Key="ObjectToVis" />
		<utils:ObjectToBoolConverter x:Key="BoolConverter" />
		<DataTemplate DataType="{x:Type model:ActionElement}">
			<Button Style="{StaticResource MediumFullButtonStyle}" Margin="0,5" Content="{Binding Name}" Click="EditControlElement_Click" />
		</DataTemplate>

		<DataTemplate DataType="{x:Type model:SeparatorElement}">
			<Border Background="Transparent" 
            Cursor="Hand"
            MouseDown="EditControlElement_Click">
				<Separator Margin="0, 10" />
			</Border>
		</DataTemplate>
	</Window.Resources>

	<StackPanel Margin="4">
		<StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
			<Button x:Name="connectButton" Content="Reconnect..." Style="{StaticResource SmallFullButtonStyle}" Width="125" Click="ConnectButton_Click"/>
			<Separator Width="4" Opacity="0"/>
			<Button x:Name="portButton" Content="Port:" Style="{StaticResource SmallFullButtonStyle}" Width="125" Click="PortButton_Click"/>
		</StackPanel>

		<Separator Height="4" Opacity="0"/>

		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
			<Button Style="{StaticResource SmallRoundButtonStyle}" IsEnabled="False" Content="≡" VerticalAlignment="Top"/>
			<Separator Width="10" Opacity="0"/>
			<Button Style="{StaticResource MediumRoundButtonStyle}" IsEnabled="False" Content="X"/>
			<Separator Width="10" Opacity="0"/>
			<Button Style="{StaticResource SmallRoundButtonStyle}" IsEnabled="False" Content="▼" VerticalAlignment="Top"/>
		</StackPanel>
		<Separator Height="4" Opacity="0"/>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
			<Button Style="{StaticResource SmallRoundButtonStyle}" IsEnabled="False" Content="+"/>
			<Separator Width="5" Opacity="0"/>
			<Button Style="{StaticResource SmallRoundButtonStyle}" IsEnabled="False" Content="++"/>
			<Separator Width="5" Opacity="0"/>
			<Button Style="{StaticResource SmallRoundButtonStyle}" IsEnabled="False">
				<TextBlock LineStackingStrategy="BlockLineHeight" LineHeight="7" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center">+<LineBreak/>++</TextBlock>
			</Button>
		</StackPanel>

		<Separator Height="4" Opacity="0"/>

		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>

			<StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
				<Button Style="{StaticResource SmallRoundButtonStyle}" ToolTip="Move Up" FontSize="12" Content="⇑" Click="MoveUp_Click" IsEnabled="{Binding SelectedMenu, Converter={StaticResource BoolConverter}}" />
				<Separator Width="4" Opacity="0"/>
				<Button Style="{StaticResource SmallRoundButtonStyle}" ToolTip="Move Down" FontSize="12" Content="⇓" Click="MoveDown_Click" IsEnabled="{Binding SelectedMenu, Converter={StaticResource BoolConverter}}" />
			</StackPanel>

			<ComboBox HorizontalContentAlignment="Center" Margin="4,0" Grid.Column="1" Width="120" Height="20" ItemsSource="{Binding UserMenus}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedMenu, Mode=TwoWay}" />

			<StackPanel HorizontalAlignment="Left" Grid.Column="2" Orientation="Horizontal">
				<Button Style="{StaticResource SmallRoundButtonStyle}" ToolTip="Edit" Content="🖉" Click="EditMenu_Click" IsEnabled="{Binding SelectedMenu, Converter={StaticResource BoolConverter}}" />
				<Separator Width="4" Opacity="0"/>
				<Button Style="{StaticResource SmallRoundButtonStyle}" ToolTip="Delete" FontSize="8" HorizontalAlignment="Left" Content="🗑" Click="DeleteMenu_Click" IsEnabled="{Binding SelectedMenu, Converter={StaticResource BoolConverter}}" />
				<Separator Width="4" Opacity="0"/>
				<Button Style="{StaticResource SmallRoundButtonStyle}" ToolTip="Add" FontSize="15" Content="+" Click="AddMenu_Click" />
			</StackPanel>
		</Grid>

		<StackPanel Margin="0,10,0,0">
			<StackPanel.Visibility>
				<Binding Path="SelectedMenu" Converter="{StaticResource ObjectToVis}" />
			</StackPanel.Visibility>
			<ItemsControl ItemsSource="{Binding SelectedMenu.Submenus}">
				<ItemsControl.ItemsPanel>
					<ItemsPanelTemplate>
						<StackPanel 
						VerticalAlignment="Center" 
						Orientation="Horizontal" 
						Height="30" HorizontalAlignment="Center" />
					</ItemsPanelTemplate>
				</ItemsControl.ItemsPanel>

				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<local:SubmenuCreatorButton
								MoveItemClick="SubmenuMove_Click"
								DeleteClick="SubmenuDelete_Click"
								EditClick="SubmenuEdit_Click"
								ColorItemClick="SubmenuColor_Click"
								Click="SubmenuButton_Click"
								Style="{StaticResource SubmenuButtonStyle}"/>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>

			<Separator Height="4" Opacity="0"/>

			<StackPanel x:Name="submenuGrid" Height="20" HorizontalAlignment="Center">
				<Button Style="{StaticResource SmallRoundButtonStyle}" Opacity="0.8" ToolTip="Add Submenu" FontSize="15" Content="+" Click="AddSubenu_Click" />
			</StackPanel>
		</StackPanel>

		<StackPanel Margin="0,10,0,0" Visibility="{Binding SelectedSubmenu, Converter={StaticResource ObjectToVis}}">
			<ItemsControl ItemsSource="{Binding SelectedSubmenu.Items}">
				<ItemsControl.ItemsPanel>
					<ItemsPanelTemplate>
						<StackPanel/>
					</ItemsPanelTemplate>
				</ItemsControl.ItemsPanel>
			</ItemsControl>
			<Button Style="{StaticResource MediumFullButtonStyle}" Height="30" Margin="0,10,0,0" Click="CreateControlElement_Click">+</Button>
		</StackPanel>
	</StackPanel>
</Window>
